{
  "name": "marcelia-vscode",
  "displayName": "Marcel'IA",
  "description": "Assistant IA pour le développement - Propulsé par Claude",
  "version": "1.0.0",
  "publisher": "eranove-gs2e",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "icon": "resources/icons/marcelia.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "marcelia.chat",
        "title": "Marcel'IA: Ouvrir le Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "marcelia.reviewCode",
        "title": "Marcel'IA: Revue de Code"
      },
      {
        "command": "marcelia.explainCode",
        "title": "Marcel'IA: Expliquer le Code"
      },
      {
        "command": "marcelia.generateTests",
        "title": "Marcel'IA: Générer des Tests"
      },
      {
        "command": "marcelia.generateDocs",
        "title": "Marcel'IA: Générer la Documentation"
      },
      {
        "command": "marcelia.signIn",
        "title": "Marcel'IA: Se Connecter"
      },
      {
        "command": "marcelia.signOut",
        "title": "Marcel'IA: Se Déconnecter"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "marcelia",
          "title": "Marcel'IA",
          "icon": "resources/icons/marcelia.svg"
        }
      ]
    },
    "views": {
      "marcelia": [
        {
          "type": "webview",
          "id": "marcelia.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "marcelia.reviewCode",
          "when": "editorHasSelection",
          "group": "marcelia@1"
        },
        {
          "command": "marcelia.explainCode",
          "when": "editorHasSelection",
          "group": "marcelia@2"
        },
        {
          "command": "marcelia.generateTests",
          "when": "editorHasSelection",
          "group": "marcelia@3"
        },
        {
          "command": "marcelia.generateDocs",
          "when": "editorHasSelection",
          "group": "marcelia@4"
        }
      ]
    },
    "configuration": {
      "title": "Marcel'IA",
      "properties": {
        "marcelia.proxyUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL du serveur proxy Marcel'IA"
        },
        "marcelia.completionEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Activer la complétion de code en ligne"
        },
        "marcelia.completionDebounceMs": {
          "type": "number",
          "default": 300,
          "description": "Délai de debounce pour la complétion en ligne (ms)"
        },
        "marcelia.devMode": {
          "type": "boolean",
          "default": false,
          "description": "Activer le mode développement (ignorer l'authentification Azure AD, se connecter au proxy local)"
        },
        "marcelia.workspaceContextEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Inclure le contexte du workspace (fichiers source) dans les requêtes chat pour permettre l'analyse de codebase"
        },
        "marcelia.toolConfirmation": {
          "type": "string",
          "enum": ["always", "write-only", "never"],
          "default": "write-only",
          "description": "Quand demander confirmation pour les opérations fichiers (always = toujours, write-only = écriture/modification seulement, never = automatique)"
        },
        "marcelia.preferredModel": {
          "type": "string",
          "enum": [
            "auto",
            "claude-haiku-4-5-20251001",
            "claude-sonnet-4-5-20250929",
            "claude-opus-4-6"
          ],
          "default": "auto",
          "description": "Modèle IA préféré (auto = routage intelligent)"
        }
      }
    }
  },
  "extensionKind": [
    "workspace"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "package": "vsce package",
    "package:vsix": "npm run build && vsce package --out marcelia.vsix",
    "publish:private": "vsce publish --pat $VSCE_PAT",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "vitest": "^2.1.0",
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.4.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.0",
    "@vscode/vsce": "^3.0.0"
  }
}
