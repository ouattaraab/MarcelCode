# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Anthropic API (direct)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Azure AD / Entra ID (for developer authentication)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_AUDIENCE=api://your-client-id

# Database
DATABASE_URL=postgresql://marcelia:marcelia_dev@localhost:5432/marcelia?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=vscode-webview://*

# Rate Limiting
RATE_LIMIT_MAX=20
RATE_LIMIT_WINDOW_SECONDS=60

# Auth enforcement (set to true to require JWT even in dev mode)
REQUIRE_AUTH=false
